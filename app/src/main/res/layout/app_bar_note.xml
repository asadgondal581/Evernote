<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtendableFab.Note">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Evernote.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Evernote.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_note" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/reminder_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:pressedTranslationZ="12dp"
        android:layout_marginBottom="480dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        app:fabSize="mini"
        android:src="@drawable/ic_add_reminder_white"
        android:backgroundTint="#00FF00"
        android:elevation="6dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/reminderBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder"
        android:textAllCaps="false"
        android:layout_gravity="bottom|end"
        app:pressedTranslationZ="12dp"
        android:layout_marginBottom="480dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="90dp"
        android:elevation="6dp"
        android:visibility="invisible"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/audio_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:pressedTranslationZ="12dp"
        android:layout_marginBottom="400dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        app:fabSize="mini"
        android:src="@drawable/ic_settings_voice_white"
        android:backgroundTint="#00FF00"
        android:elevation="6dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/audioBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:pressedTranslationZ="12dp"
        android:text="Audio"
        android:textAllCaps="false"
        android:layout_marginBottom="400dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="90dp"
        android:elevation="6dp"
        android:visibility="invisible"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/attachment_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:pressedTranslationZ="12dp"
        android:layout_marginBottom="330dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        app:fabSize="mini"
        android:src="@drawable/ic_attach_file_white"
        android:backgroundTint="#00FF00"
        android:elevation="6dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/attachmentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attachment"
        android:textAllCaps="false"
        android:layout_gravity="bottom|end"
        app:pressedTranslationZ="12dp"
        android:layout_marginBottom="330dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="90dp"
        android:elevation="6dp"
        android:visibility="invisible"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/handWriting_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:pressedTranslationZ="12dp"
        android:layout_marginBottom="250dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        app:fabSize="mini"
        android:src="@drawable/ic_handwriting"
        android:backgroundTint="#00FF00"
        android:elevation="6dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/handWritingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HandWriting"
        android:textAllCaps="false"
        android:layout_gravity="bottom|end"
        app:pressedTranslationZ="12dp"
        android:layout_marginBottom="250dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="90dp"
        android:elevation="6dp"
        android:visibility="invisible"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/camera_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:pressedTranslationZ="12dp"
        android:layout_marginBottom="180dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        app:fabSize="mini"
        android:src="@drawable/ic_camera_white"
        android:backgroundTint="#00FF00"
        android:elevation="6dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/cameraBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:textAllCaps="false"
        android:layout_gravity="bottom|end"
        app:pressedTranslationZ="12dp"
        android:layout_marginBottom="180dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="90dp"
        android:visibility="invisible"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/textNote_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:pressedTranslationZ="12dp"
        android:layout_marginBottom="110dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        app:fabSize="mini"
        android:src="@drawable/ic_note_add_white"
        android:backgroundTint="#00FF00"
        android:elevation="6dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/textNoteExBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Note"
        android:textAllCaps="false"
        android:layout_gravity="bottom|end"
        app:pressedTranslationZ="12dp"
        android:layout_marginBottom="110dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="90dp"
        android:elevation="6dp"
        android:visibility="invisible"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:backgroundTint="#00FF00"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_add_white_24"
        app:fabSize="normal"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>